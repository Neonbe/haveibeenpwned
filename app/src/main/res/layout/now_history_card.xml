<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
	android:clipToPadding="false" >

    <LinearLayout
        android:id="@+id/card_history_layout_1" 
	    android:orientation="horizontal"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:paddingTop="6dip"
	    android:paddingLeft="10dip"
	    android:paddingBottom="10dip" >
	        
	    <TextView 
	        android:id="@+id/card_history_1"
	        android:background="@null"
	        android:textColor="@color/card_text"
	        android:textSize="16sp"
	        android:longClickable="true"
	        android:layout_weight="1"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content" />
	        
	    <ImageButton 
		    android:contentDescription="@string/button_search"
		    android:id="@+id/button_history_search_1"
		    android:src="@drawable/ic_search_history_selector"
		    android:background="@null"
		    android:drawablePadding="0dip"
		    android:layout_width="30dip"
		    android:layout_height="fill_parent"
		    android:layout_gravity="center_vertical|right"
		    style="?android:attr/borderlessButtonStyle" />
	</LinearLayout>
	
    <View
    	android:id="@+id/card_history_divider_1"
    	android:layout_width="fill_parent"
    	android:layout_height="1dip"
    	android:background="?android:attr/dividerHorizontal" />
    
    <LinearLayout
        android:id="@+id/card_history_layout_2" 
	    android:orientation="horizontal"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:paddingTop="10dip"
	    android:paddingLeft="10dip"
	    android:paddingBottom="10dip" >
	        
	    <TextView 
	        android:id="@+id/card_history_2"
	        android:background="@null"
	        android:textColor="@color/card_text"
	        android:textSize="16sp"
	        android:longClickable="true"
	        android:layout_weight="1"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content" />
	        
	    <ImageButton 
		    android:contentDescription="@string/button_search"
		    android:id="@+id/button_history_search_2"
		    android:src="@drawable/ic_search_history_selector"
		    android:background="@null"
		    android:drawablePadding="0dip"
		    android:layout_width="30dip"
		    android:layout_height="fill_parent"
		    android:layout_gravity="center_vertical|right"
		    style="?android:attr/borderlessButtonStyle" />
	</LinearLayout>
	
    <View
    	android:id="@+id/card_history_divider_2"
    	android:layout_width="fill_parent"
    	android:layout_height="1dip"
    	android:background="?android:attr/dividerHorizontal" />
        
    <LinearLayout 
	    android:id="@+id/card_history_layout_3"
	    android:orientation="horizontal"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:paddingTop="10dip"
	    android:paddingLeft="10dip"
	    android:paddingBottom="6dip" >
	        
	    <TextView 
	        android:id="@+id/card_history_3"
	        android:background="@null"
	        android:textColor="@color/card_text"
	        android:textSize="16sp"
	        android:longClickable="true"
	        android:layout_weight="1"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content" />
	        
	    <ImageButton 
		    android:contentDescription="@string/button_search"
		    android:id="@+id/button_history_search_3"
		    android:src="@drawable/ic_search_history_selector"
		    android:background="@null"
		    android:drawablePadding="0dip"
		    android:layout_width="30dip"
		    android:layout_height="fill_parent"
		    android:layout_gravity="center_vertical|right"
		    style="?android:attr/borderlessButtonStyle" />
	</LinearLayout>
            
</LinearLayout>